{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js", 
      "use": "@vercel/node"
    },
    {
      "src": "client-side/dist/**/*", 
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)", 
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/client-side/dist/index.html"
    }
  ]
}
